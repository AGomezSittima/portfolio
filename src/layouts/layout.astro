---
import Footer from "@/components/footer.astro";
import Header from "@/components/header.astro";
import Metadata from "@/components/metadata.astro";
import ThemeSetupScript from "@/components/theme-setup-script.astro";
import { Toaster } from "@/components/ui/sonner";
import { getI18n } from "@/i18n";
import type { CommonDTO } from "@/i18n/data/common";
import { getLangFromUrl } from "@/i18n/utils";
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";

const lang = getLangFromUrl(Astro.url);
const t = getI18n("commonData", lang) as CommonDTO;

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <Metadata lang={lang} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>
      {t["me.name"]}
      {t["me.last-name"]}{title ? ` - ${title}` : ""}
    </title>

    <ThemeSetupScript />

    <!-- Astro View Transitions -->
    <ClientRouter />

    <!-- Keep scroll position (e.g. when changing language) -->
    <script is:inline>
      document.addEventListener("astro:after-swap", () => {
        if (!localStorage.getItem("scrollY")) {
          return;
        }

        const scrollY = localStorage.getItem("scrollY");

        document.documentElement.style.scrollBehavior = "auto";
        window.scrollTo(0, parseInt(scrollY));
        document.documentElement.style.scrollBehavior = "";

        localStorage.removeItem("scrollY");
      });
    </script>
  </head>
  <body
    class="bg-background text-foreground flex min-h-screen flex-col gap-y-8 lg:gap-y-24"
  >
    <Toaster client:idle />
    <Header />
    <main class="container mx-auto flex-1 px-8">
      <slot />
    </main>
    <Footer language={lang} />
  </body>
</html>
